@{ ViewData["Title"] = "Home Page"; }

<div class="text-center">
    <h1 class="display-4">Web Testing Service: Checking Broken Links</h1>
    <div class="card-header bg-danger text-white">
        <h5 class="text-uppercase text-center">Enter link:</h5>
    </div>
    <div class="card-body">
        <form asp-action="">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label Name="Url"></label>
                <input name="Url" class="form-control" />
            </div>
            <input type="submit" value="Submit" class="btn btn-sm btn-success text-uppercase rounded-0" />
        </form>
    </div>
</div>
